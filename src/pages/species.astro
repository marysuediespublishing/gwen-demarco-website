---
import Layout from '../layouts/Layout.astro';
import { SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

// Get all species
const allSpecies = await getCollection('species');

// Get all series and books for context
const allSeries = await getCollection('series');
const allBooks = await getCollection('books');

// Function to format species name for display
const formatSpeciesName = (name: string): string => {
	// Handle special cases
	if (name.toLowerCase() === 'human') return 'Human';

	// For multi-word names, preserve the original capitalization from the content file
	// For single-word names, apply title case
	if (name.includes(' ')) {
		return name; // Preserve admin-defined capitalization for multi-word names
	} else {
		return name.charAt(0).toUpperCase() + name.slice(1).toLowerCase();
	}
};

// Add appearance count for each species
const speciesWithStats = allSpecies.map(species => {
	// Count series appearances - check if species ID is in series.data.species array
	const seriesCount = allSeries.filter(series =>
		series.data.species && series.data.species.includes(species.id)
	).length;

	// Count book appearances - check if species ID is in book.data.species array
	const bookCount = allBooks.filter(book =>
		book.data.species && book.data.species.includes(species.id)
	).length;

	return {
		...species,
		seriesCount,
		bookCount,
		displayName: formatSpeciesName(species.data.name)
	};
}).sort((a, b) => a.displayName.localeCompare(b.displayName));
