---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get site configuration from CMS
const settingsCollection = await getCollection('settings');
const siteConfig = settingsCollection[0]?.data || {
	socialLinks: {
		goodreads: "https://www.goodreads.com/author/show/20443791.Gwen_DeMarco",
		amazon: "https://www.amazon.com/stores/Gwen-DeMarco/author/B08CJ1G1RJ",
		email: "gwendemarcoauthor@gmail.com"
	}
};

// What I write about themes
const writingThemes = [
	"Paranormal romance with snarky heroines",
	"Grumpy heroes with hearts of gold",
	"Urban fantasy and supernatural creatures",
	"Found family themes that warm the heart"
];
---

<Layout title="Contact - Gwen DeMarco" description="Get in touch with Gwen DeMarco. I'd love to hear from readers and fellow writers about paranormal romance and urban fantasy.">
	<main id="main-content" class="relative">
		<!-- Hero Section -->
		<section class="relative py-20 bg-gradient-night overflow-hidden">
			<!-- Background fog effect -->
			<div class="absolute inset-0 bg-gradient-fog opacity-40"></div>
			<div class="absolute inset-0 bg-gradient-to-t from-shadow-black/80 to-transparent"></div>

			<div class="container mx-auto px-4 relative z-10">
				<div class="max-w-4xl mx-auto text-center space-y-6">
					<h1 class="text-4xl md:text-6xl font-primary font-bold text-bone-white mb-4">
						<span class="bg-gradient-to-r from-mystic-violet via-ember-orange to-mystic-teal bg-clip-text text-transparent">
							Let's Connect
						</span>
					</h1>
					<p class="text-xl md:text-2xl text-ember-orange font-medium">
						I'd love to hear from readers & fellow writers
					</p>
					<p class="text-lg text-moon-silver/90 max-w-2xl mx-auto leading-relaxed">
						Whether you have questions about my books, want to chat about paranormal romance, or just want to say hello, feel free to reach out.
					</p>
				</div>
			</div>
		</section>

		<!-- Contact Content Section -->
		<section class="py-16 bg-dark-surface">
			<div class="container mx-auto px-4">
				<div class="max-w-4xl mx-auto">
					<div class="grid md:grid-cols-2 gap-8">
						<!-- Get in Touch Card -->
						<div class="card p-8">
							<h2 class="text-2xl font-primary font-bold text-bone-white mb-6">Get in Touch</h2>
							<div class="space-y-6">
								<div>
									<h3 class="text-lg font-medium text-ember-orange mb-2">Email</h3>
									<p class="text-moon-silver">
										<a href={`mailto:${siteConfig.socialLinks?.email || 'gwendemarcoauthor@gmail.com'}`} class="text-mystic-teal hover:text-ember-orange transition-colors">
											{siteConfig.socialLinks?.email || 'gwendemarcoauthor@gmail.com'}
										</a>
									</p>
								</div>

								<div>
									<h3 class="text-lg font-medium text-ember-orange mb-2">Find Me Online</h3>
									<div class="space-y-3">
										{siteConfig.socialLinks?.amazon && (
											<div>
												<a href={siteConfig.socialLinks.amazon} target="_blank" rel="noopener noreferrer" class="text-mystic-teal hover:text-ember-orange transition-colors flex items-center gap-2">
													<span class="text-xl">&#128218;</span>
													Amazon Author Page
												</a>
											</div>
										)}
										{siteConfig.socialLinks?.goodreads && (
											<div>
												<a href={siteConfig.socialLinks.goodreads} target="_blank" rel="noopener noreferrer" class="text-mystic-teal hover:text-ember-orange transition-colors flex items-center gap-2">
													<span class="text-xl">&#128214;</span>
													Goodreads
												</a>
											</div>
										)}
										<div>
											<a href="https://www.facebook.com/GwenDeMarcoAuthor" target="_blank" rel="noopener noreferrer" class="text-mystic-teal hover:text-ember-orange transition-colors flex items-center gap-2">
												<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
													<path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
												</svg>
												Facebook
											</a>
										</div>
										<div>
											<a href="https://instagram.com/gwendemarcoauthor" target="_blank" rel="noopener noreferrer" class="text-mystic-teal hover:text-ember-orange transition-colors flex items-center gap-2">
												<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
													<path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
												</svg>
												Instagram
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>

						<!-- What I Write About Card -->
						<div class="card p-8">
							<h2 class="text-2xl font-primary font-bold text-bone-white mb-6">What I Write About</h2>
							<ul class="space-y-3 text-moon-silver">
								{writingThemes.map((theme) => (
									<li class="flex items-start gap-3">
										<span class="text-mystic-violet">&#10022;</span>
										{theme}
									</li>
								))}
							</ul>
						</div>
					</div>

					<!-- Response Note -->
					<div class="mt-8 p-6 bg-gradient-to-r from-midnight-purple/50 via-shadow-black to-midnight-purple/50 rounded-xl border border-mystic-violet/30">
						<p class="text-moon-silver/90">
							<strong class="text-ember-orange">Note:</strong> I try to respond to all inquiries within 48 hours. For book recommendations or writing questions, I love hearing from readers!
						</p>
					</div>

					<!-- Newsletter CTA -->
					<div class="mt-12 text-center">
						<div class="card p-8 bg-gradient-to-br from-midnight-purple to-shadow-black border-mystic-violet/30">
							<h2 class="text-2xl font-primary font-bold text-bone-white mb-4">
								Join the Supernatural Side
							</h2>
							<p class="text-moon-silver mb-6 max-w-xl mx-auto">
								Get exclusive content, early access to new releases, and behind-the-scenes peeks into the weird and wonderful worlds of urban fantasy.
							</p>
							<button type="button" class="btn btn-primary btn-lg px-8 py-4 inline-block newsletter-trigger">
								Subscribe to My Newsletter
							</button>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
