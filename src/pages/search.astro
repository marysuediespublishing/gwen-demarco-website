                            year: 'numeric',
                            month: 'long',
                            day: 'numeric'
                          })}
                        </time>
                        {post.data.tags && post.data.tags.length > 0 && (
                          <span class="bg-mystic-violet/20 text-mystic-teal px-2 py-1 rounded text-xs">
                            {post.data.tags[0]}
                          </span>
                        )}
