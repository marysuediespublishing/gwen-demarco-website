    <!-- Search Header -->
    <section class="py-12 bg-gradient-to-br from-shadow-black via-midnight-purple to-shadow-black relative overflow-hidden">
      <!-- Decorative glow -->
      <div class="absolute inset-0 bg-gradient-to-r from-mystic-violet/10 to-ember-orange/5 pointer-events-none"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-3xl md:text-4xl font-primary font-bold text-bone-white mb-6">
            {searchQuery ? (
              <>Search Results for "<span class="text-ember-orange">{searchQuery}</span>"</>
            ) : (
              <>Search <span class="bg-gradient-to-r from-mystic-violet to-ember-orange bg-clip-text text-transparent">My Books</span></>
            )}
          </h1>

          {searchQuery && (
            <p class="text-lg text-moon-silver/80 mb-6">
              Found {totalResults} result{totalResults !== 1 ? 's' : ''} matching your search
            </p>
          )}

          <!-- Search Form -->
          <form method="get" action="/search" class="max-w-2xl mx-auto">
            <div class="relative">
              <input
                type="text"
                name="q"
                value={searchQuery}
                placeholder="Search books, series, species..."
                class="w-full bg-shadow-black/50 backdrop-blur-sm border-2 border-mystic-violet/30
                       rounded-lg px-6 py-4 text-moon-silver placeholder-fog-gray text-lg
                       focus:outline-none focus:border-ember-orange focus:shadow-mystic
                       transition-all duration-200"
                aria-label="Search"
              />
              <button
                type="submit"
                class="absolute right-3 top-1/2 transform -translate-y-1/2 text-fog-gray hover:text-ember-orange transition-colors"
              >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
