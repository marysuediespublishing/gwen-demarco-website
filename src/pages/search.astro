---
import Layout from '../layouts/Layout.astro';
import { SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

// Get search query from URL params
const url = Astro.url;
const searchQuery = url.searchParams.get('q') || '';

// Get all content for searching
const books = (await getCollection('books')).map(book => ({
  ...book,
  slug: book.id,
  coverUrl: book.data.cover || null
}));

const seriesCollection = await getCollection('series');
const blog = await getCollection('blog');
const speciesCollection = await getCollection('species');
const pages = await getCollection('pages');

// Optional collections - may not exist
let characters: any[] = [];
let locations: any[] = [];

try {
  characters = await getCollection('characters');
} catch (e) {
  // characters collection may be empty or not exist
}

try {
  locations = await getCollection('locations');
} catch (e) {
  // locations collection may be empty or not exist
}

// Helper function to handle hyphen vs space matching
const normalizeForSearch = (text: string): string => {
  return text.replace(/\s+/g, '-');
};

const matchesQuery = (text: string, query: string): boolean => {
  if (!text) return false;
  const lowerText = text.toLowerCase();
  const lowerQuery = query.toLowerCase();
  const normalizedQuery = normalizeForSearch(lowerQuery);

  return lowerText.includes(lowerQuery) || lowerText.includes(normalizedQuery);
};

// Search functions
const searchBooks = (query: string) => {
  if (!query) return [];

  return books.filter(book =>
    matchesQuery(book.data.title, query) ||
    matchesQuery(book.data.description, query) ||
    matchesQuery(book.data.author, query) ||
    (book.data.series && matchesQuery(book.data.series, query)) ||
    (book.data.species && book.data.species.some(s => matchesQuery(s, query))) ||
    (book.data.genres && book.data.genres.some(genre => matchesQuery(genre, query))) ||
    (book.data.setting && book.data.setting.some(setting => matchesQuery(setting, query)))
  );
};

const searchSeries = (query: string) => {
  if (!query) return [];

  return seriesCollection.filter(s =>
    matchesQuery(s.data.title, query) ||
    matchesQuery(s.data.description, query) ||
    (s.data.worldBuilding && matchesQuery(s.data.worldBuilding, query)) ||
    (s.data.species && s.data.species.some(species => matchesQuery(species, query)))
  );
};

const searchBlogPosts = (query: string) => {
  if (!query) return [];

  return blog.filter(post =>
    matchesQuery(post.data.title, query) ||
    matchesQuery(post.data.description, query) ||
    (post.data.category && matchesQuery(post.data.category, query)) ||
    (post.data.tags && post.data.tags.some(tag => matchesQuery(tag, query)))
  );
};

const searchSpecies = (query: string) => {
  if (!query) return [];

  return speciesCollection.filter(s =>
    matchesQuery(s.data.name, query) ||
    (s.data.description && matchesQuery(s.data.description, query)) ||
    (s.data.physicalTraits && matchesQuery(s.data.physicalTraits, query)) ||
    (s.data.cultureNotes && matchesQuery(s.data.cultureNotes, query)) ||
    (s.data.abilities && matchesQuery(s.data.abilities, query))
  );
};

const searchCharacters = (query: string) => {
  if (!query || characters.length === 0) return [];

  return characters.filter(c =>
    matchesQuery(c.data.name, query) ||
    (c.data.description && matchesQuery(c.data.description, query)) ||
    (c.data.species && matchesQuery(c.data.species, query)) ||
    (c.data.books && c.data.books.some((book: string) => matchesQuery(book, query)))
  );
};

const searchPages = (query: string) => {
  if (!query) return [];

  return pages.filter(p =>
    matchesQuery(p.data.title, query) ||
    (p.data.hero?.title && matchesQuery(p.data.hero.title, query)) ||
    (p.data.hero?.tagline && matchesQuery(p.data.hero.tagline, query)) ||
    (p.data.authorBio?.mainBio && matchesQuery(p.data.authorBio.mainBio, query))
  );
};

const searchLocations = (query: string) => {
  if (!query || locations.length === 0) return [];

  return locations.filter(l =>
    matchesQuery(l.data.name, query) ||
    (l.data.description && matchesQuery(l.data.description, query)) ||
    (l.data.environmentType && matchesQuery(l.data.environmentType, query))
  );
};

// Perform searches
const foundBooks = searchBooks(searchQuery);
const foundSeries = searchSeries(searchQuery);
const foundBlogPosts = searchBlogPosts(searchQuery);
const foundSpecies = searchSpecies(searchQuery);
const foundCharacters = searchCharacters(searchQuery);
const foundPages = searchPages(searchQuery);
const foundLocations = searchLocations(searchQuery);

const totalResults = foundBooks.length + foundSeries.length + foundBlogPosts.length +
                     foundSpecies.length + foundCharacters.length + foundPages.length +
                     foundLocations.length;

// Popular searches for empty state - urban fantasy themed
const popularSearches = [
  'Sophie Feegle',
  'shifter',
  'vampire',
  'fae',
  'San Francisco',
  'Kingdom of Erishum',
  'Auras & Embers',
  'paranormal romance'
];
---

