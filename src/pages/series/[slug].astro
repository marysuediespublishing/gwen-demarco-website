---
import Layout from '../../layouts/Layout.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection, render } from 'astro:content';
import { Image, getImage } from 'astro:assets';

// Get the slug from URL params
const { slug } = Astro.params;

// Fetch all series and find the one matching the slug
const seriesCollection = await getCollection('series');
const seriesItem = seriesCollection.find(s => s.id === slug);

// Handle series not found - return 404
if (!seriesItem) {
  return Astro.redirect('/404');
}

// Render the series content (markdown body)
const { Content } = await render(seriesItem);

// Helper function to map series names to slugs
function getSeriesSlug(seriesName: string): string {
  const seriesMap: Record<string, string> = {
    'Sophie Feegle': 'sophie-feegle',
    'Kingdom of Erishum': 'kingdom-of-erishum',
    'Auras & Embers': 'auras-and-embers'
  };
  return seriesMap[seriesName] || seriesName.toLowerCase().replace(/\s+/g, '-').replace(/&/g, 'and');
}

// Get all books for this series and process images
const allBooks = await getCollection('books');
const seriesBooks = await Promise.all(
  allBooks
    .filter(book => {
      const bookSeries = book.data.series;
      return bookSeries === seriesItem.data.title ||
             bookSeries === seriesItem.id ||
             bookSeries?.toLowerCase().replace(/\s+/g, '-') === seriesItem.id;
    })
    .map(async book => {
      try {
        const coverImage = book.data.cover ? await getImage({
          src: book.data.cover,
          width: 300,
          height: 450,
          format: 'webp'
        }) : null;

        return {
          ...book,
          slug: book.id,
          coverUrl: coverImage?.src
        };
      } catch (error) {
        console.warn(`Failed to process image for book ${book.id}:`, error);
        return {
          ...book,
          slug: book.id,
          coverUrl: null
        };
      }
    })
);

// Sort books by series order
const sortedSeriesBooks = seriesBooks.sort((a, b) => {
  const orderA = a.data.seriesOrder || 999;
  const orderB = b.data.seriesOrder || 999;
  return orderA - orderB;
});

// Get related series (same species) and add slug property
const allSeries = seriesCollection.map(series => ({
  ...series,
  slug: series.id
}));

const relatedSeries = allSeries.filter(s => {
  const currentSpecies = seriesItem.data.species || [];
  const otherSpecies = s.data.species || [];

  return s.id !== seriesItem.id &&
    otherSpecies.some((species: string) =>
      currentSpecies.includes(species)
    );
}).slice(0, 3);

// Function to convert species slugs to proper display names
const formatSpeciesName = (slug: string): string => {
  const speciesMap: Record<string, string> = {
    'shifters': 'Shifters',
    'ogres': 'Ogres',
    'vampires': 'Vampires',
    'fae': 'Fae',
    'auramancers': 'Auramancers',
    'humans': 'Humans',
    'hyvas': 'Hyvas',
    'bennu-shifters': 'Bennu Shifters'
  };

  if (speciesMap[slug]) {
    return speciesMap[slug];
  }

  // Convert kebab-case to title case
  return slug.split('-').map(word =>
    word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()
  ).join(' ');
};

// Calculate series statistics
const totalRatings = sortedSeriesBooks.reduce((sum, book) => sum + (book.data.ratingCount || 0), 0);
const averageRating = sortedSeriesBooks.length > 0
  ? sortedSeriesBooks.reduce((sum, book) => sum + (book.data.rating || 0), 0) / sortedSeriesBooks.length
  : 0;
const totalWordCount = sortedSeriesBooks.reduce((sum, book) => sum + (book.data.wordCount || 0), 0);

// Get site config for newsletter
let siteConfig: any = {};
try {
  const settingsCollection = await getCollection('settings');
  const siteConfigData = settingsCollection[0]?.data;
  siteConfig = {
    newsletter: {
      leadMagnetTitle: siteConfigData?.newsletter?.leadMagnetTitle || "Join the Supernatural Side",
      leadMagnetDescription: siteConfigData?.newsletter?.leadMagnetDescription || "Get exclusive content, early access to new releases, and behind-the-scenes peeks into the weird and wonderful worlds of urban fantasy."
    }
  };
} catch (error) {
  siteConfig = {
    newsletter: {
      leadMagnetTitle: "Join the Supernatural Side",
      leadMagnetDescription: "Get exclusive content, early access to new releases, and behind-the-scenes peeks into the weird and wonderful worlds of urban fantasy."
    }
  };
}
---

<Layout
  title={`${seriesItem.data.title} - ${SITE_TITLE}`}
  description={seriesItem.data.description}
>
  <main id="main-content" class="min-h-screen bg-shadow-black">
    <!-- Hero Section -->
    <section class="relative py-16 bg-gradient-night overflow-hidden">
      <!-- Fog Background Effect -->
      <div class="absolute inset-0 bg-gradient-fog opacity-30"></div>
      <div class="absolute inset-0 bg-gradient-to-t from-shadow-black/60 to-transparent"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-6xl mx-auto">
          <!-- Breadcrumb -->
          <nav class="mb-8" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-2 text-sm text-moon-silver/60">
              <li><a href="/" class="hover:text-moon-silver transition-colors">Home</a></li>
              <li class="text-moon-silver/40">/</li>
              <li><a href="/series" class="hover:text-moon-silver transition-colors">Series</a></li>
              <li class="text-moon-silver/40">/</li>
              <li class="text-moon-silver">{seriesItem.data.title}</li>
            </ol>
          </nav>

          <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
            <!-- Series Cover & Quick Info -->
            <div class="lg:col-span-1">
              {seriesItem.data.cover && (
                <div class="mb-6">
                  <Image
                    src={seriesItem.data.cover}
                    alt={`${seriesItem.data.title} series cover`}
                    class="w-full max-w-sm mx-auto rounded-xl shadow-2xl hover:shadow-violet-glow transition-all duration-300"
                    width={400}
                    height={600}
                  />
                </div>
              )}

              <!-- Series Stats Card -->
              <div class="card p-6">
                <h3 class="text-lg font-primary font-bold text-bone-white mb-4">Series Info</h3>
                <div class="space-y-3 text-sm">
                  <div class="flex justify-between">
                    <span class="text-fog-gray">Books:</span>
                    <span class="text-moon-silver font-medium">{seriesItem.data.bookCount}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-fog-gray">Status:</span>
                    <span class={`font-medium capitalize ${seriesItem.data.completionStatus === 'complete' ? 'text-mystic-teal' : 'text-ember-orange'}`}>
                      {seriesItem.data.completionStatus}
                    </span>
                  </div>
                  {(seriesItem.data.overallRating || averageRating > 0) && (
                    <div class="flex justify-between">
                      <span class="text-fog-gray">Rating:</span>
                      <span class="text-moon-silver font-medium">
                        {(seriesItem.data.overallRating || averageRating).toFixed(1)} <span class="text-ember-orange">â˜…</span>
                      </span>
                    </div>
                  )}
                  {(seriesItem.data.totalRatings || totalRatings > 0) && (
                    <div class="flex justify-between">
                      <span class="text-fog-gray">Total Ratings:</span>
                      <span class="text-moon-silver font-medium">{(seriesItem.data.totalRatings || totalRatings).toLocaleString()}</span>
                    </div>
                  )}
                  {totalWordCount > 0 && (
                    <div class="flex justify-between">
                      <span class="text-fog-gray">Total Words:</span>
                      <span class="text-moon-silver font-medium">{Math.round(totalWordCount / 1000)}k</span>
                    </div>
                  )}
                  {seriesItem.data.startDate && (
                    <div class="flex justify-between">
                      <span class="text-fog-gray">Started:</span>
                      <span class="text-moon-silver font-medium">
                        {new Date(seriesItem.data.startDate).getFullYear()}
                      </span>
                    </div>
                  )}
                  {seriesItem.data.completionDate && seriesItem.data.completionStatus === 'complete' && (
                    <div class="flex justify-between">
                      <span class="text-fog-gray">Completed:</span>
                      <span class="text-moon-silver font-medium">
                        {new Date(seriesItem.data.completionDate).getFullYear()}
                      </span>
                    </div>
                  )}
                </div>

                {(() => {
                  const currentSpecies = seriesItem.data.species || [];
                  return currentSpecies.length > 0 && (
                    <div class="mt-6 pt-4 border-t border-dark-border">
                      <h4 class="text-sm font-medium text-moon-silver mb-3">Featured Creatures:</h4>
                      <div class="flex flex-wrap gap-2">
                        {currentSpecies.map((species: string) => (
                          <a
                            href={`/species/${species}`}
                            class="badge badge-primary text-xs hover:bg-ember-orange/25 transition-colors"
                          >
                            {formatSpeciesName(species)}
                          </a>
                        ))}
                      </div>
                    </div>
                  );
                })()}
              </div>
            </div>

            <!-- Series Description -->
            <div class="lg:col-span-2">
              <div class="space-y-6">
                <div>
                  <div class="flex flex-wrap items-center gap-4 mb-4">
                    <h1 class="text-4xl md:text-5xl font-primary font-bold text-bone-white">
                      <span class="bg-gradient-to-r from-mystic-violet via-ember-orange to-mystic-teal bg-clip-text text-transparent">
                        {seriesItem.data.title}
                      </span>
                    </h1>
                    {seriesItem.data.completionStatus === 'complete' && (
                      <span class="badge badge-primary uppercase tracking-wide">
                        Complete
                      </span>
                    )}
                    {seriesItem.data.completionStatus === 'ongoing' && (
                      <span class="badge badge-secondary uppercase tracking-wide">
                        Ongoing
                      </span>
                    )}
                  </div>
                  <p class="text-xl text-ember-orange font-medium mb-6">
                    {seriesItem.data.description}
                  </p>
                </div>

                <!-- World Building Info -->
                {seriesItem.data.worldBuilding && (
                  <div class="card p-6">
                    <h3 class="text-lg font-primary font-bold text-bone-white mb-3">World Building</h3>
                    <p class="text-moon-silver/90 leading-relaxed">{seriesItem.data.worldBuilding}</p>
                  </div>
                )}

                <!-- Reading Order -->
                {seriesItem.data.readingOrder && seriesItem.data.readingOrder.length > 0 && (
                  <div class="card p-6">
                    <h3 class="text-lg font-primary font-bold text-bone-white mb-4">Reading Order</h3>
                    <ol class="space-y-3">
                      {seriesItem.data.readingOrder.map((bookSlug: string, index: number) => {
                        const book = sortedSeriesBooks.find(b => b.slug === bookSlug);
                        return (
                          <li class="flex items-center space-x-4 text-moon-silver/90">
                            <span class="w-8 h-8 bg-ember-orange text-shadow-black rounded-full flex items-center justify-center text-sm font-bold flex-shrink-0">
                              {index + 1}
                            </span>
                            {book ? (
                              <a href={`/books/${book.slug}`} class="hover:text-ember-orange transition-colors font-medium">
                                {book.data.title}
                              </a>
                            ) : (
                              <span class="text-fog-gray/70">{bookSlug}</span>
                            )}
                          </li>
                        );
                      })}
                    </ol>
                  </div>
                )}

                <!-- CTA Buttons -->
                {sortedSeriesBooks.length > 0 && (
                  <div class="flex flex-col sm:flex-row gap-4 pt-4">
                    <a
                      href={`/books/${sortedSeriesBooks[0].slug}`}
                      class="btn btn-primary btn-lg"
                    >
                      Start Reading Book 1
                    </a>
                    {sortedSeriesBooks[0].data.amazonUrl && (
                      <a
                        href={sortedSeriesBooks[0].data.amazonUrl}
                        class="btn btn-secondary btn-lg"
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        Buy on Amazon
                      </a>
                    )}
                  </div>
                )}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Series Content (Markdown Body) -->
    {Content && (
      <section class="py-16 bg-dark-surface">
        <div class="container mx-auto px-4">
          <div class="max-w-4xl mx-auto prose prose-lg prose-invert">
            <Content />
          </div>
        </div>
      </section>
    )}

    <!-- Books in Series -->
    <section class="py-16 bg-shadow-black">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-primary font-bold text-bone-white mb-4">
            Books in This Series
          </h2>
          <p class="text-lg text-fog-gray">
            {seriesItem.data.completionStatus === 'complete'
              ? 'The complete collection'
              : `${sortedSeriesBooks.length} of ${seriesItem.data.bookCount} books published`}
          </p>
        </div>

        {sortedSeriesBooks.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 max-w-6xl mx-auto">
            {sortedSeriesBooks.map((book) => (
              <a href={`/books/${book.slug}`} class="card card-hover group p-4">
                {book.data.cover ? (
                  <Image
                    src={book.data.cover}
                    alt={`${book.data.title} book cover`}
                    class="w-full aspect-[2/3] object-cover rounded-lg mb-3"
                    width={300}
                    height={450}
                  />
                ) : (
                  <div class="w-full aspect-[2/3] bg-gradient-to-br from-mystic-violet/20 to-midnight-purple rounded-lg mb-3 flex items-center justify-center border border-mystic-violet/30 group-hover:border-ember-orange/50 transition-colors">
                    <span class="text-4xl opacity-60">ðŸ“–</span>
                  </div>
                )}

                {book.data.seriesOrder && (
                  <span class="badge badge-secondary text-xs mb-2">Book {book.data.seriesOrder}</span>
                )}

                <h3 class="font-primary text-lg font-bold text-ember-orange mb-1 group-hover:text-mystic-teal transition-colors line-clamp-2">
                  {book.data.title}
                </h3>

                {book.data.rating && (
                  <div class="flex items-center space-x-1">
                    <span class="text-ember-orange text-sm">â˜…</span>
                    <span class="text-moon-silver text-xs">{book.data.rating}</span>
                    {book.data.ratingCount && (
                      <span class="text-fog-gray text-xs">({book.data.ratingCount.toLocaleString()})</span>
                    )}
                  </div>
                )}

                {book.data.isKU && (
                  <span class="badge badge-primary text-xs mt-2">FREE on KU</span>
                )}
              </a>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <div class="text-5xl mb-4 opacity-60">ðŸ“š</div>
            <p class="text-fog-gray text-lg">Books in this series are coming soon!</p>
          </div>
        )}
      </div>
    </section>

    <!-- Related Series -->
    {relatedSeries.length > 0 && (
      <section class="py-16 bg-dark-surface">
        <div class="container mx-auto px-4">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-primary font-bold text-bone-white mb-4">
              Related Series
            </h2>
            <p class="text-lg text-fog-gray">
              Other series featuring similar supernatural creatures and themes
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
            {relatedSeries.map((related) => (
              <div class="card p-6 group">
                <div class="text-center">
                  <h3 class="text-xl font-primary font-bold text-bone-white mb-2">
                    <a href={`/series/${related.slug}`} class="hover:text-ember-orange transition-colors">
                      {related.data.title}
                    </a>
                  </h3>
                  <p class="text-fog-gray mb-4 text-sm line-clamp-3">
                    {related.data.description}
                  </p>

                  <div class="flex justify-center items-center space-x-4 text-sm text-fog-gray mb-4">
                    <span>{related.data.bookCount} Books</span>
                    <span class="text-moon-silver/40">â€¢</span>
                    <span class={`capitalize ${related.data.completionStatus === 'complete' ? 'text-mystic-teal' : 'text-ember-orange'}`}>
                      {related.data.completionStatus}
                    </span>
                  </div>

                  {(() => {
                    const relatedSpecies = related.data.species || [];
                    return relatedSpecies.length > 0 && (
                      <div class="flex flex-wrap justify-center gap-2 mb-4">
                        {relatedSpecies.slice(0, 3).map((species: string) => (
                          <a
                            href={`/species/${species}`}
                            class="badge badge-outline text-xs hover:bg-ember-orange/20 transition-colors"
                          >
                            {formatSpeciesName(species)}
                          </a>
                        ))}
                      </div>
                    );
                  })()}

                  <a
                    href={`/series/${related.slug}`}
                    class="btn btn-secondary btn-sm w-full"
                  >
                    Explore Series
                  </a>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Newsletter CTA -->
    <section class="py-16 bg-gradient-to-r from-midnight-purple via-shadow-black to-midnight-purple">
      <div class="container mx-auto px-4 text-center">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-primary font-bold text-bone-white mb-4">
            Love This Series?
          </h2>
          <p class="text-xl mb-8 text-moon-silver/90">
            {siteConfig.newsletter?.leadMagnetDescription}
          </p>

          <a
            href="/contact"
            class="btn btn-primary px-8 py-4 text-lg"
          >
            {siteConfig.newsletter?.leadMagnetTitle}
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
