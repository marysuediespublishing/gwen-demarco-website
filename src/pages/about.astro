---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get site configuration from CMS
const settingsCollection = await getCollection('settings');
const siteConfig = settingsCollection[0]?.data || {
	authorBio: "Gwen DeMarco is an avid reader, wine & coffee drinker, gardener and a lover of all things nerdy. She loves to write paranormal romance novels with a focus on the weird and wonderful. She loves to write a good snarky heroine and a grumpy male lead. Gwen is happily married to her high school sweetheart and has two teenage children. She can often be found with her nose in a book and a glass of wine or mug of coffee in her hand.",
	tagline: "Paranormal romance with a focus on the weird and wonderful",
	stats: {
		booksPublished: 11,
		pagesRead: "1M+",
		readerRatings: "500+",
		averageRating: "4.5"
	},
	socialLinks: {
		goodreads: "https://www.goodreads.com/author/show/20443791.Gwen_DeMarco",
		amazon: "https://www.amazon.com/stores/Gwen-DeMarco/author/B08CJ1G1RJ",
		email: "gwendemarcoauthor@gmail.com"
	}
};

// Philosophy cards for Gwen's writing style
const philosophyCards = [
	{
		icon: "&#9889;",
		title: "Snarky Heroines",
		description: "My heroines have attitude, opinions, and aren't afraid to use them. They solve problems with wit and determination, not damsel-in-distress moments."
	},
	{
		icon: "&#128545;",
		title: "Grumpy Heroes",
		description: "There's nothing like a grumpy hero with a hidden heart of gold. Add some supernatural tension and you've got the perfect slow burn romance."
	},
	{
		icon: "&#128293;",
		title: "Found Family",
		description: "Blood doesn't make a familyâ€”loyalty does. My books celebrate the bonds we choose and the people who become home against all odds."
	},
	{
		icon: "&#127747;",
		title: "Urban Fantasy Worlds",
		description: "From San Francisco's supernatural underbelly to ancient kingdoms, my stories blend the magical with the mundane in richly detailed settings."
	}
];
---

<Layout title="About Gwen DeMarco | Paranormal Romance Author" description="Learn about Gwen DeMarco, author of paranormal romance novels featuring snarky heroines, grumpy heroes, and the magic of found family.">
	<main id="main-content" class="relative">
		<!-- Hero Section -->
		<section class="relative py-20 bg-gradient-night overflow-hidden">
			<!-- Background fog effect -->
			<div class="absolute inset-0 bg-gradient-fog opacity-40"></div>
			<div class="absolute inset-0 bg-gradient-to-t from-shadow-black/80 to-transparent"></div>

			<div class="container mx-auto px-4 relative z-10">
				<div class="max-w-4xl mx-auto text-center">
					<h1 class="text-4xl md:text-6xl font-primary font-bold text-bone-white mb-6">
						<span class="bg-gradient-to-r from-mystic-violet via-ember-orange to-mystic-teal bg-clip-text text-transparent">
							About Gwen DeMarco
						</span>
					</h1>
					<p class="text-xl text-ember-orange font-medium">
						{siteConfig.tagline || "Paranormal romance with a focus on the weird and wonderful"}
					</p>
				</div>
			</div>
		</section>

		<!-- Author Bio Section -->
		<section class="py-16 bg-dark-surface">
			<div class="container mx-auto px-4">
				<div class="max-w-5xl mx-auto">
					<div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
						<!-- Author Photo Placeholder -->
						<div class="lg:col-span-1">
							<div class="card p-8 text-center bg-gradient-to-br from-midnight-purple to-shadow-black border-mystic-violet/30">
								<div class="w-32 h-32 mx-auto bg-gradient-to-br from-mystic-violet to-ember-orange rounded-full flex items-center justify-center mb-6 shadow-mystic">
									<span class="text-6xl">&#9997;</span>
								</div>
								<h3 class="text-xl font-bold text-bone-white mb-2 font-primary">Gwen DeMarco</h3>
								<p class="text-ember-orange">Paranormal Romance Author</p>
							</div>
						</div>

						<!-- Author Bio -->
						<div class="lg:col-span-2">
							<div class="prose prose-lg max-w-none">
								<p class="text-moon-silver text-lg leading-relaxed mb-6">
									{siteConfig.authorBio || "Gwen DeMarco is an avid reader, wine & coffee drinker, gardener and a lover of all things nerdy. She loves to write paranormal romance novels with a focus on the weird and wonderful."}
								</p>

								<p class="text-fog-gray leading-relaxed mb-6">
									Gwen's stories blend supernatural creatures, urban fantasy settings, and found family themes with steamy romance and plenty of humor. From shifters and ogres in San Francisco's supernatural underbelly to ancient kingdoms filled with mysterious creatures, her worlds are richly detailed and endlessly imaginative.
								</p>

								<p class="text-fog-gray leading-relaxed">
									When she's not writing, Gwen can be found with her nose in a book and a glass of wine (or mug of coffee) in her hand, surrounded by the people and things she loves most.
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Stats Section -->
		<section class="py-16 bg-gradient-to-r from-midnight-purple via-shadow-black to-midnight-purple">
			<div class="container mx-auto px-4">
				<div class="text-center mb-12">
					<h2 class="text-3xl md:text-4xl font-primary font-bold text-bone-white mb-4">
						By the Numbers
					</h2>
					<p class="text-xl text-fog-gray">
						The weird and wonderful journey so far
					</p>
				</div>

				<div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
					<div class="text-center">
						<div class="text-4xl md:text-5xl font-bold text-ember-orange mb-2">
							{siteConfig.stats?.booksPublished || 11}
						</div>
						<div class="text-moon-silver/80">Books Published</div>
					</div>

					<div class="text-center">
						<div class="text-4xl md:text-5xl font-bold text-mystic-violet mb-2">
							{siteConfig.stats?.pagesRead || "32M+"}
						</div>
						<div class="text-moon-silver/80">Pages Read</div>
					</div>

					<div class="text-center">
						<div class="text-4xl md:text-5xl font-bold text-mystic-teal mb-2">
							{siteConfig.stats?.readerRatings || "13K+"}
						</div>
						<div class="text-moon-silver/80">Reader Ratings</div>
					</div>

					<div class="text-center">
						<div class="text-4xl md:text-5xl font-bold text-ember-orange mb-2">
							{siteConfig.stats?.averageRating || "4.5"}
						</div>
						<div class="text-moon-silver/80">Average Rating</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Writing Philosophy Section -->
		<section class="py-16 bg-bg-secondary">
			<div class="container mx-auto px-4">
				<div class="max-w-5xl mx-auto">
					<div class="text-center mb-12">
						<h2 class="text-3xl md:text-4xl font-primary font-bold text-bone-white mb-4">
							My Writing Philosophy
						</h2>
						<p class="text-lg text-fog-gray">
							What makes my paranormal romances different
						</p>
					</div>

					<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
						{philosophyCards.map((card) => (
							<div class="card p-8 hover:shadow-mystic transition-all duration-300">
								<div class="text-4xl mb-4" set:html={card.icon}></div>
								<h3 class="text-xl font-bold text-ember-orange mb-4 font-primary">{card.title}</h3>
								<p class="text-fog-gray">
									{card.description}
								</p>
							</div>
						))}
					</div>
				</div>
			</div>
		</section>

		<!-- Connect Section -->
		<section class="py-16 bg-gradient-night">
			<div class="container mx-auto px-4 text-center">
				<div class="max-w-3xl mx-auto">
					<h2 class="text-3xl md:text-4xl font-primary font-bold text-bone-white mb-6">
						Let's Connect
					</h2>
					<p class="text-xl text-moon-silver/90 mb-8">
						Join the community of readers who love snarky heroines, grumpy heroes, and paranormal romances with heart.
					</p>

					<div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
						<a href="/books" class="btn btn-primary btn-lg px-8 py-4">
							Explore My Books
						</a>
						<a href="/contact" class="btn btn-secondary btn-lg px-8 py-4">
							Get in Touch
						</a>
					</div>

					{siteConfig.socialLinks && (
						<div>
							<p class="text-fog-gray mb-4">Find me online:</p>
							<div class="flex justify-center flex-wrap gap-6">
								{siteConfig.socialLinks.amazon && (
									<a href={siteConfig.socialLinks.amazon} target="_blank" rel="noopener noreferrer" class="text-ember-orange hover:text-mystic-teal transition-colors font-medium">
										Amazon
									</a>
								)}
								{siteConfig.socialLinks.goodreads && (
									<a href={siteConfig.socialLinks.goodreads} target="_blank" rel="noopener noreferrer" class="text-ember-orange hover:text-mystic-teal transition-colors font-medium">
										Goodreads
									</a>
								)}
								{siteConfig.socialLinks.email && (
									<a href={`mailto:${siteConfig.socialLinks.email}`} class="text-ember-orange hover:text-mystic-teal transition-colors font-medium">
										Email
									</a>
								)}
							</div>
						</div>
					)}
				</div>
			</div>
		</section>
	</main>
</Layout>
