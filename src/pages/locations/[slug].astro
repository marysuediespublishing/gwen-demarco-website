---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

// Get the slug from URL params
const { slug } = Astro.params;

// Fetch all locations and find the one matching the slug
const allLocations = await getCollection('locations');
const location = allLocations.find(l => l.id === slug);

// Handle location not found - return 404
if (!location) {
	return Astro.redirect('/404');
}

// Get all series and books to show related content
const allSeries = await getCollection('series');
const allBooks = await getCollection('books');

// Find books set in this location
const relatedBooks = allBooks.filter(book =>
	book.data.setting && book.data.setting.includes(location.id)
).sort((a, b) => a.data.title.localeCompare(b.data.title));

// Function to split long text into paragraphs for better readability
const formatTextWithParagraphs = (text: string): string[] => {
	if (!text) return [];

	const naturalParagraphs = text.split(/\n\s*\n/);
	if (naturalParagraphs.length > 1) {
		return naturalParagraphs.map(p => p.trim()).filter(p => p.length > 0);
	}

	if (text.length > 600) {
		const sentences = text.match(/[^\.!?]+[\.!?]+/g) || [text];
		if (sentences.length > 3) {
			const paragraphs = [];
			let currentParagraph = '';
			for (const sentence of sentences) {
				const trimmedSentence = sentence.trim();
				if (currentParagraph.length + trimmedSentence.length > 400 && currentParagraph.length > 0) {
					paragraphs.push(currentParagraph.trim());
					currentParagraph = trimmedSentence;
				} else {
					currentParagraph += (currentParagraph ? ' ' : '') + trimmedSentence;
				}
			}
			if (currentParagraph.trim()) {
				paragraphs.push(currentParagraph.trim());
			}
			return paragraphs.length > 1 ? paragraphs : [text];
		}
	}

	return [text];
};

// Get emoji for environment type
const getLocationEmoji = (envType: string | undefined): string => {
	const emojiMap: Record<string, string> = {
		'urban-interior': 'üèõÔ∏è',
		'urban-city': 'üåâ',
		'fantasy-kingdom': 'üè∞',
		'fantasy-wilderness': 'üå≤',
		'urban-supernatural': '‚ú®',
	};
	return emojiMap[envType || ''] || 'üó∫Ô∏è';
};

const { Content } = await render(location);
---

<Layout title={`${location.data.name} - Locations - Gwen DeMarco`} description={location.data.description || `Explore ${location.data.name} in Gwen DeMarco's paranormal romance and urban fantasy novels.`}>
	<main id="main-content" class="relative">
		<!-- Hero Section -->
		<section class="relative py-16 bg-gradient-night overflow-hidden">
			<!-- Background fog effect -->
			<div class="absolute inset-0 bg-gradient-fog opacity-30"></div>
			<div class="absolute inset-0 bg-gradient-to-t from-shadow-black/60 to-transparent"></div>

			<div class="container mx-auto px-4 relative z-10">
				<div class="max-w-4xl mx-auto text-center">
					<div class="text-lg text-ember-orange font-medium mb-2">Location</div>
					<h1 class="text-5xl md:text-6xl font-primary font-bold text-bone-white mb-6">
						<span class="bg-gradient-to-r from-mystic-violet via-ember-orange to-mystic-teal bg-clip-text text-transparent">
							{location.data.name}
						</span>
					</h1>
					{location.data.environmentType && (
						<div class="inline-flex items-center space-x-2 px-4 py-2 bg-midnight-purple/50 rounded-full border border-mystic-violet/30">
							<span class="text-xl">{getLocationEmoji(location.data.environmentType)}</span>
							<span class="text-moon-silver capitalize">{location.data.environmentType.replace(/-/g, ' ')}</span>
						</div>
					)}
				</div>
			</div>
		</section>

		<!-- Main Content Section -->
		<section class="py-16 bg-dark-surface">
			<div class="container mx-auto px-4">
				<div class="max-w-6xl mx-auto">
					<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
						<!-- Description -->
						<div class="space-y-6">
							{location.data.description && (
								<div class="text-xl text-moon-silver leading-relaxed space-y-4">
									{formatTextWithParagraphs(location.data.description).map((paragraph) => (
										<p>{paragraph}</p>
									))}
								</div>
							)}
						</div>

						<!-- Image and Related Content -->
						<div class="space-y-8">
							<!-- Location Image -->
							{location.data.image ? (
								<div class="relative max-w-sm mx-auto lg:mx-0">
									<div class="relative rounded-2xl overflow-hidden shadow-2xl border border-mystic-violet/30">
										<img
											src={typeof location.data.image === 'string' ? location.data.image : location.data.image.src}
											alt={`${location.data.name} location artwork`}
											class="w-full h-auto object-cover"
										/>
									</div>
									<div class="absolute inset-0 rounded-2xl border-2 border-ember-orange/20 -m-1"></div>
								</div>
							) : (
								<div class="relative max-w-sm mx-auto lg:mx-0">
									<div class="aspect-[4/3] bg-gradient-to-br from-mystic-violet/40 to-midnight-purple rounded-2xl flex items-center justify-center shadow-2xl border border-mystic-violet/30">
										<div class="text-center text-moon-silver">
											<div class="text-8xl mb-4">{getLocationEmoji(location.data.environmentType)}</div>
											<div class="text-lg font-bold text-bone-white">{location.data.name}</div>
										</div>
									</div>
								</div>
							)}

							<!-- Related Books -->
							{relatedBooks.length > 0 && (
								<div class="bg-midnight-purple/50 rounded-lg p-4 border border-mystic-violet/20">
									<h3 class="text-lg font-bold text-bone-white mb-3 flex items-center">
										<svg class="w-5 h-5 text-ember-orange mr-2" fill="currentColor" viewBox="0 0 20 20">
											<path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V4.804z"></path>
										</svg>
										Books Set Here ({relatedBooks.length})
									</h3>
									<div class="space-y-2 max-h-48 overflow-y-auto">
										{relatedBooks.map((book) => (
											<a
												href={`/books/${book.id}`}
												class="block text-sm text-moon-silver/80 hover:text-ember-orange transition-colors"
											>
												{book.data.title}
											</a>
										))}
									</div>
								</div>
							)}
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Additional Content from MDX body -->
		{location.body && location.body.trim() !== '' && (
			<section class="py-20 bg-shadow-black">
				<div class="container mx-auto px-4">
					<div class="max-w-4xl mx-auto">
						<div class="bg-midnight-purple/30 rounded-xl p-8 shadow-lg border border-mystic-violet/20">
							<h2 class="text-3xl font-primary font-bold text-bone-white mb-6">About This Location</h2>
							<div class="prose prose-lg prose-invert max-w-none text-moon-silver prose-headings:text-bone-white prose-a:text-mystic-teal hover:prose-a:text-ember-orange">
								<Content />
							</div>
						</div>
					</div>
				</div>
			</section>
		)}

		<!-- Navigation -->
		<section class="py-16 bg-gradient-to-r from-midnight-purple via-shadow-black to-midnight-purple">
			<div class="container mx-auto px-4 text-center">
				<div class="max-w-3xl mx-auto space-y-8">
					<h2 class="text-3xl md:text-4xl font-primary font-bold text-bone-white">
						Explore More Worlds
					</h2>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<a href="/locations" class="btn btn-primary btn-lg px-8 py-4">
							All Locations
						</a>
						<a href="/series" class="btn btn-outline btn-lg px-8 py-4">
							Browse Series
						</a>
						<a href="/species" class="btn btn-outline btn-lg px-8 py-4">
							Supernatural Species
						</a>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
