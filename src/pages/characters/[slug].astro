---
import Layout from '../../layouts/Layout.astro';
import { type CollectionEntry, getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const allCharacters = await getCollection('characters');
  return allCharacters.map((character) => ({
    params: { slug: character.id },
    props: character,
  }));
}

type Props = CollectionEntry<'characters'>;

const character = Astro.props;

// Get all books and species for context
const allBooks = await getCollection('books');
const allSpecies = await getCollection('species');

// Get books this character appears in (main appearances)
const mainBooks = character.data.books
	? allBooks.filter(book => character.data.books?.includes(book.id))
	: [];

// Get books this character has cameos in
const cameoBooks = character.data.cameos
	? allBooks.filter(book => character.data.cameos?.includes(book.id))
	: [];

// Get species info if available
const speciesInfo = character.data.species
	? allSpecies.find(s => s.id === character.data.species)
	: null;

// Function to split long text into paragraphs for better readability
const formatTextWithParagraphs = (text: string): string[] => {
	if (!text) return [];

	const naturalParagraphs = text.split(/\n\s*\n/);
	if (naturalParagraphs.length > 1) {
		return naturalParagraphs.map(p => p.trim()).filter(p => p.length > 0);
	}

	if (text.length > 600) {
		const sentences = text.match(/[^\.!?]+[\.!?]+/g) || [text];
		if (sentences.length > 3) {
			const paragraphs = [];
			let currentParagraph = '';
			for (const sentence of sentences) {
				const trimmedSentence = sentence.trim();
				if (currentParagraph.length + trimmedSentence.length > 400 && currentParagraph.length > 0) {
					paragraphs.push(currentParagraph.trim());
					currentParagraph = trimmedSentence;
				} else {
					currentParagraph += (currentParagraph ? ' ' : '') + trimmedSentence;
				}
			}
			if (currentParagraph.trim()) {
				paragraphs.push(currentParagraph.trim());
			}
			return paragraphs.length > 1 ? paragraphs : [text];
		}
	}

	return [text];
};

const { Content } = await render(character);
---

<Layout title={`${character.data.name} - Characters - Gwen DeMarco`} description={character.data.description || `Learn about ${character.data.name} from Gwen DeMarco's paranormal romance novels.`}>
	<main id="main-content" class="relative">
		<!-- Hero Section -->
		<section class="relative py-16 bg-gradient-night overflow-hidden">
			<!-- Background fog effect -->
			<div class="absolute inset-0 bg-gradient-fog opacity-30"></div>
			<div class="absolute inset-0 bg-gradient-to-t from-shadow-black/60 to-transparent"></div>

			<div class="container mx-auto px-4 relative z-10">
				<div class="max-w-4xl mx-auto text-center">
					<div class="text-lg text-ember-orange font-medium mb-2">Character Profile</div>
					<h1 class="text-5xl md:text-6xl font-primary font-bold text-bone-white mb-6">
						<span class="bg-gradient-to-r from-mystic-violet via-ember-orange to-mystic-teal bg-clip-text text-transparent">
							{character.data.name}
						</span>
					</h1>
					{speciesInfo && (
						<a
							href={`/species/${speciesInfo.id}`}
							class="inline-block px-4 py-2 bg-mystic-violet/30 text-mystic-teal hover:text-ember-orange hover:bg-mystic-violet/50 rounded-full transition-all duration-200 text-sm font-medium"
						>
							{speciesInfo.data.name}
						</a>
					)}
				</div>
			</div>
		</section>

		<!-- Main Content Section -->
		<section class="py-16 bg-dark-surface">
			<div class="container mx-auto px-4">
				<div class="max-w-6xl mx-auto">
					<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
						<!-- Description -->
						<div class="space-y-6">
							{character.data.description && (
								<div class="text-xl text-moon-silver leading-relaxed space-y-4">
									{formatTextWithParagraphs(character.data.description).map((paragraph) => (
										<p>{paragraph}</p>
									))}
								</div>
							)}
						</div>

						<!-- Image and Stats -->
						<div class="space-y-8">
							<!-- Character Image -->
							{character.data.image ? (
								<div class="relative max-w-sm mx-auto lg:mx-0">
									<div class="relative rounded-2xl overflow-hidden shadow-2xl border border-mystic-violet/30">
										<img
											src={character.data.image}
											alt={`${character.data.name} character artwork`}
											class="w-full h-auto object-cover"
										/>
									</div>
									<div class="absolute inset-0 rounded-2xl border-2 border-ember-orange/20 -m-1"></div>
								</div>
							) : (
								<div class="relative max-w-sm mx-auto lg:mx-0">
									<div class="aspect-[3/4] bg-gradient-to-br from-mystic-violet/40 to-midnight-purple rounded-2xl flex items-center justify-center shadow-2xl border border-mystic-violet/30">
										<div class="text-center text-moon-silver">
											<div class="text-8xl mb-4">ðŸ‘¤</div>
											<div class="text-lg font-bold text-bone-white">{character.data.name}</div>
										</div>
									</div>
								</div>
							)}

							<!-- Appearance Lists -->
							<div class="space-y-6">
								<!-- Main Books -->
								{mainBooks.length > 0 && (
									<div class="bg-midnight-purple/50 rounded-lg p-4 border border-mystic-violet/20">
										<h3 class="text-lg font-bold text-bone-white mb-3 flex items-center">
											<svg class="w-5 h-5 text-ember-orange mr-2" fill="currentColor" viewBox="0 0 20 20">
												<path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V4.804z"></path>
											</svg>
											Main Appearances ({mainBooks.length})
										</h3>
										<div class="space-y-2">
											{mainBooks.map((book) => (
												<a
													href={`/books/${book.id}`}
													class="block text-sm text-moon-silver/80 hover:text-ember-orange transition-colors"
												>
													{book.data.title}
												</a>
											))}
										</div>
									</div>
								)}

								<!-- Cameos -->
								{cameoBooks.length > 0 && (
									<div class="bg-midnight-purple/50 rounded-lg p-4 border border-mystic-violet/20">
										<h3 class="text-lg font-bold text-bone-white mb-3 flex items-center">
											<svg class="w-5 h-5 text-mystic-teal mr-2" fill="currentColor" viewBox="0 0 20 20">
												<path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
												<path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
											</svg>
											Cameo Appearances ({cameoBooks.length})
										</h3>
										<div class="space-y-2 max-h-48 overflow-y-auto">
											{cameoBooks.map((book) => (
												<a
													href={`/books/${book.id}`}
													class="block text-sm text-moon-silver/80 hover:text-ember-orange transition-colors"
												>
													{book.data.title}
												</a>
											))}
										</div>
									</div>
								)}

								<!-- Species Link -->
								{speciesInfo && (
									<div class="bg-midnight-purple/50 rounded-lg p-4 border border-mystic-violet/20">
										<h3 class="text-lg font-bold text-bone-white mb-3 flex items-center">
											<svg class="w-5 h-5 text-mystic-violet mr-2" fill="currentColor" viewBox="0 0 20 20">
												<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
											</svg>
											Species
										</h3>
										<a
											href={`/species/${speciesInfo.id}`}
											class="block text-sm text-moon-silver/80 hover:text-ember-orange transition-colors"
										>
											{speciesInfo.data.name}
										</a>
									</div>
								)}
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Additional Content from MDX body -->
		{character.body && character.body.trim() !== '' && (
			<section class="py-20 bg-shadow-black">
				<div class="container mx-auto px-4">
					<div class="max-w-4xl mx-auto">
						<div class="bg-midnight-purple/30 rounded-xl p-8 shadow-lg border border-mystic-violet/20">
							<h2 class="text-3xl font-primary font-bold text-bone-white mb-6">Additional Information</h2>
							<div class="prose prose-lg prose-invert max-w-none text-moon-silver prose-headings:text-bone-white prose-a:text-mystic-teal hover:prose-a:text-ember-orange">
								<Content />
							</div>
						</div>
					</div>
				</div>
			</section>
		)}

		<!-- Navigation -->
		<section class="py-16 bg-gradient-to-r from-midnight-purple via-shadow-black to-midnight-purple">
			<div class="container mx-auto px-4 text-center">
				<div class="max-w-3xl mx-auto space-y-8">
					<h2 class="text-3xl md:text-4xl font-primary font-bold text-bone-white">
						Explore More Characters
					</h2>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<a href="/characters" class="btn btn-primary btn-lg px-8 py-4">
							All Characters
						</a>
						<a href="/species" class="btn btn-outline btn-lg px-8 py-4">
							Browse Species
						</a>
						<a href="/books" class="btn btn-outline btn-lg px-8 py-4">
							View Books
						</a>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
