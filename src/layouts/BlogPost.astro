---
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'] & {
	previousPost?: CollectionEntry<'blog'> | null;
	nextPost?: CollectionEntry<'blog'> | null;
	categoryMap?: Record<string, string>;
};

const { title, description, pubDate, updatedDate, heroImage, bookSlug, tags, category, readingTime, previousPost, nextPost, categoryMap = {} } = Astro.props;

// Resolve category slug to display title using the category map, with fallback
const getCategoryTitle = (cat: string) => categoryMap[cat] || cat.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');
---

<Layout title={`${title} - Gwen DeMarco`} description={description}>
	<main id="main-content" class="relative">
		<!-- Hero Section with gradient overlay -->
		<section class="relative py-12 md:py-16 bg-gradient-night overflow-hidden">
			<!-- Background fog effect -->
			<div class="absolute inset-0 bg-gradient-fog opacity-30"></div>
			<div class="absolute inset-0 bg-gradient-to-t from-shadow-black via-transparent to-shadow-black/50"></div>

			<div class="container mx-auto px-4 relative z-10">
				<div class="max-w-4xl mx-auto">
					<!-- Category badge -->
					{category && (
						<div class="text-center mb-4">
							<a href={`/blog/?category=${category}`} class="badge badge-series text-sm hover:bg-mystic-violet/30 transition-colors">
								{getCategoryTitle(category)}
							</a>
						</div>
					)}

					<!-- Title -->
					<h1 class="text-3xl md:text-5xl font-primary font-bold text-bone-white text-center mb-6 leading-tight">
						{title}
					</h1>

					<!-- Meta info -->
					<div class="flex flex-wrap items-center justify-center gap-4 text-sm">
						<span class="text-mystic-teal">
							<FormattedDate date={pubDate} />
						</span>
						{updatedDate && (
							<span class="text-fog-gray">
								(Updated: <FormattedDate date={updatedDate} />)
							</span>
						)}
						{readingTime && (
							<span class="text-fog-gray/70 flex items-center gap-1">
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
								{readingTime}
							</span>
						)}
					</div>
				</div>
			</div>
		</section>

		<!-- Hero Image (if present) -->
		{heroImage && (
			<section class="relative -mt-8 mb-8 px-4">
				<div class="container mx-auto max-w-4xl">
					<div class="relative rounded-xl overflow-hidden shadow-2xl shadow-mystic-violet/20">
						{bookSlug ? (
							<a href={`/books/${bookSlug}/`} class="block group">
								<img
									src={heroImage}
									alt={`${title} - Click to view book details`}
									class="w-full h-auto max-h-[50vh] object-cover group-hover:scale-105 transition-transform duration-500"
								/>
								<div class="absolute inset-0 bg-gradient-to-t from-shadow-black/60 via-transparent to-transparent group-hover:from-shadow-black/40 transition-colors"></div>
								<div class="absolute bottom-4 left-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
									<span class="badge badge-primary text-sm">
										View Book Details
									</span>
								</div>
							</a>
						) : (
							<img
								src={heroImage}
								alt=""
								class="w-full h-auto max-h-[50vh] object-cover"
							/>
						)}
					</div>
				</div>
			</section>
		)}

		<!-- Article Content -->
		<article class="py-8 md:py-12">
			<div class="container mx-auto px-4">
				<div class="max-w-3xl mx-auto prose prose-lg prose-invert">
					<slot />
				</div>
			</div>
		</article>

		<!-- Tags -->
		{tags && tags.length > 0 && (
			<section class="py-6 border-t border-dark-border">
				<div class="container mx-auto px-4">
					<div class="max-w-3xl mx-auto">
						<div class="flex flex-wrap items-center gap-2">
							<span class="text-fog-gray text-sm">Tags:</span>
							{tags.map((tag) => (
								<span class="text-xs text-mystic-teal/80 bg-midnight-purple/40 px-3 py-1 rounded-full border border-mystic-violet/20 hover:border-mystic-violet/40 transition-colors">
									#{tag}
								</span>
							))}
						</div>
					</div>
				</div>
			</section>
		)}

		<!-- Previous/Next Navigation -->
		{(previousPost || nextPost) && (
			<nav class="py-12 bg-bg-secondary border-t border-dark-border">
				<div class="container mx-auto px-4">
					<div class="max-w-4xl mx-auto">
						<h3 class="text-center text-fog-gray text-sm uppercase tracking-wider mb-8">
							Continue Reading
						</h3>
						<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
							{nextPost && (
								<a href={`/blog/${nextPost.id}/`} class="group card card-hover p-6 flex flex-col">
									<div class="flex items-center gap-2 text-sm text-mystic-teal mb-3">
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
										</svg>
										<span>Next Post</span>
									</div>
									<h4 class="font-primary font-semibold text-lg text-bone-white group-hover:text-ember-orange transition-colors line-clamp-2">
										{nextPost.data.title}
									</h4>
									<p class="text-sm text-fog-gray mt-2">
										<FormattedDate date={nextPost.data.pubDate} />
									</p>
								</a>
							)}

							{previousPost && (
								<a href={`/blog/${previousPost.id}/`} class={`group card card-hover p-6 flex flex-col ${!nextPost ? 'md:col-start-2' : ''}`}>
									<div class="flex items-center justify-end gap-2 text-sm text-mystic-teal mb-3">
										<span>Previous Post</span>
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
										</svg>
									</div>
									<h4 class="font-primary font-semibold text-lg text-bone-white group-hover:text-ember-orange transition-colors text-right line-clamp-2">
										{previousPost.data.title}
									</h4>
									<p class="text-sm text-fog-gray mt-2 text-right">
										<FormattedDate date={previousPost.data.pubDate} />
									</p>
								</a>
							)}
						</div>
					</div>
				</div>
			</nav>
		)}

		<!-- Back to Blog CTA -->
		<section class="py-12 px-4 bg-gradient-to-r from-midnight-purple via-shadow-black to-midnight-purple">
			<div class="container mx-auto text-center">
				<div class="max-w-2xl mx-auto">
					<h2 class="font-primary text-2xl md:text-3xl font-bold text-bone-white mb-4">
						Explore More Stories
					</h2>
					<p class="text-moon-silver/90 mb-6">
						Discover more insights from my writing journey and the worlds I create.
					</p>
					<a href="/blog" class="btn btn-primary px-6 py-3">
						View All Posts
					</a>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	/* Prose styles for blog content */
	.prose {
		@apply text-moon-silver;
	}

	.prose :global(h1),
	.prose :global(h2),
	.prose :global(h3),
	.prose :global(h4) {
		@apply font-primary text-bone-white font-bold mt-8 mb-4;
	}

	.prose :global(h2) {
		@apply text-2xl md:text-3xl;
	}

	.prose :global(h3) {
		@apply text-xl md:text-2xl;
	}

	.prose :global(p) {
		@apply mb-6 leading-relaxed;
	}

	.prose :global(a) {
		@apply text-mystic-teal hover:text-ember-orange transition-colors underline underline-offset-2;
	}

	.prose :global(strong) {
		@apply text-bone-white font-semibold;
	}

	.prose :global(em) {
		@apply text-moon-silver/90 italic;
	}

	.prose :global(ul),
	.prose :global(ol) {
		@apply mb-6 pl-6;
	}

	.prose :global(li) {
		@apply mb-2;
	}

	.prose :global(ul li) {
		@apply list-disc;
	}

	.prose :global(ol li) {
		@apply list-decimal;
	}

	.prose :global(blockquote) {
		@apply border-l-4 border-mystic-violet pl-6 py-2 my-6 italic text-moon-silver/80 bg-midnight-purple/20 rounded-r-lg;
	}

	.prose :global(code) {
		@apply font-mono text-ember-orange bg-midnight-purple/40 px-2 py-0.5 rounded text-sm;
	}

	.prose :global(pre) {
		@apply bg-midnight-purple/40 p-4 rounded-lg overflow-x-auto my-6;
	}

	.prose :global(pre code) {
		@apply bg-transparent p-0;
	}

	.prose :global(hr) {
		@apply border-dark-border my-8;
	}

	.prose :global(img) {
		@apply rounded-lg my-6 mx-auto;
	}

	.line-clamp-2 {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
</style>
