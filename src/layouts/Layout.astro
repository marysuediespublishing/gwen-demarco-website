---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FogBackground from '../components/ui/FogBackground';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
}

const {
  title,
  description = "Gwen DeMarco writes paranormal romance with a focus on the weird and wonderful. Snarky heroines, grumpy heroes, and found family.",
  image = "/images/og-image.jpg",
  type = "website"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.url);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#0a0a0f" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:site_name" content="Gwen DeMarco - Paranormal Romance Author" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Gwen DeMarco" />
    <meta name="keywords" content="paranormal romance, urban fantasy, shifter romance, vampire romance, gwen demarco, sophie feegle" />

    <!-- Performance optimizations -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <title>{title}</title>
  </head>
  <body class="min-h-screen antialiased bg-shadow-black text-moon-silver">
    <!-- Subtle animated fog background for atmosphere -->
    <FogBackground client:load fogLayerCount={5} emberCount={12} className="opacity-50" />

    <!-- Skip to main content for accessibility -->
    <a href="#main-content" class="skip-link">
      Skip to main content
    </a>

    <Header />

    <slot />

    <Footer />

    <!-- Global scripts -->
    <script is:inline>
      // Enhanced focus management
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Tab') {
          document.body.classList.add('user-is-tabbing');
        }
      });

      document.addEventListener('mousedown', () => {
        document.body.classList.remove('user-is-tabbing');
      });
    </script>
  </body>
</html>
