    </g>

    <!-- Mystic violet window highlights -->
    <g filter="url(#windowGlow)" fill="rgba(107, 70, 193, 0.5)">
      <rect x="110" y="55" width="2" height="3" />
      <rect x="205" y="50" width="2" height="3" />
      <rect x="350" y="58" width="2" height="3" />
      <rect x="480" y="60" width="2" height="3" />
      <rect x="600" y="48" width="2" height="3" />
      <rect x="710" y="52" width="2" height="3" />
      <rect x="850" y="60" width="2" height="3" />
      <rect x="985" y="58" width="2" height="3" />
      <rect x="1115" y="65" width="2" height="3" />
    </g>
  </svg>
</div>

<style>
  .city-skyline {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120px;
    pointer-events: none;
    opacity: 0.8;
  }

  @media (prefers-reduced-motion: no-preference) {
    .city-skyline svg {
      animation: skyline-float 20s ease-in-out infinite alternate;
    }
  }

  @keyframes skyline-float {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-3px);
    }
  }
</style>
